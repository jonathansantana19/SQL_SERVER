
BEGIN TRANSACTION

DECLARE @CODIGO INT, @CIDADES VARCHAR(MAX) ,@UF VARCHAR(MAX)
SELECT @CODIGO = CODIGO,
@CIDADES = CIDADES,
@UF = UF
 FROM CIDADES
WHERE  CODIGO = 8443     
   
UPDATE PESSOAS_ENDERECOS
SET  COD_TIPE = 1 , COD_STATE = 1 ,
 RUA_ENDE = 'R 3 7 0 2' ,
COMPLEMENTO_ENDE = NULL , BAIRRO_ENDE = 'VILA CAFETEIRA' , CEP_ENDE = '65110000' ,  CIDADE_COD =  @CODIGO ,
INFOAD_ENDE  = NULL  
WHERE COD_ENDE = 15919378 

ROLLBACK
